{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
} 